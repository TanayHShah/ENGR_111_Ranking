<main>
    <div id="header">
        <div>
            <h1>Edge Computing challenge Ranking Board</h1>
            <div>
                <i>Leaderboard Update: Rankings refreshed daily at 12 AM based on new scores.</i>
            </div>
        </div>
        <div style="display: block;">
            <img src="../public/images/stevens_logo.jpg" width="200">
            <div style="padding-left: 40px;">
                <h6>
                    Date : {{currentDate}}
                </h6>
            </div>
        </div>

    </div>
    <div id="leaderboard">
        <div class="ribbon"></div>
        <table>
            {{#each data}}
            <tr>
                <td class="number">{{incrementedIndex @index}}</td>
                <td class="name">{{name.S}}</td>
                <td class="name">{{prof_email.S}}</td>
                <td class="points">{{total_score.N}}
                    {{#checkInputValue @index 0}}
                    <img class="gold-medal"
                        src="https://github.com/malunaridev/Challenges-iCodeThis/blob/master/4-leaderboard/assets/gold-medal.png?raw=true"
                        alt="gold medal" />
                    {{/checkInputValue}}
                </td>
                <td class="number">
                    <a href="#detail_modal" class="open_modal" data-toggle="modal" data-score_1="{{score_1.N}}"
                        data-score_2="{{score_2.N}}" data-score_3="{{score_3.N}}"><i class="fas fa-plus fa-xs"></i></a>
                </td>
            </tr>
            {{/each}}

        </table>
    </div>
    <div id="detail_modal" class="modal hide fade modal-xl" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Detailed Scoring</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <ul>
                        <li>
                            <h5>
                                Score, Data Count : <span id="modal_score_data"> </span>
                            </h5>
                        </li>
                        <li>
                            <h5>
                                Score, Remaining Water : <span id="modal_score_water"> </span>
                            </h5>
                        </li>
                        <li>
                            <h5>
                                Score, Outlier :<span id="modal_score_outlier"> </span>
                            </h5>
                        </li>
                    </ul>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">
                        Close
                    </button>
                </div>
            </div>
        </div>
    </div>
</main>
<script type="text/javascript">
    $(document).ready(function () {
        $('.open_modal').on('click', function () {
            var score_1 = $(this).data('score_1');
            var score_2 = $(this).data('score_2');
            var score_3 = $(this).data('score_3');
            console.log(score_1);
            jQuery("#modal_score_data").html(score_1);
            jQuery("#modal_score_water").html(score_2);
            jQuery("#modal_score_outlier").html(score_3);

        });
        jQuery("#detail_modal").modal("hide");
    });
</script>